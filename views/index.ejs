<%- include ("partials/header") %>

    <body>
        <%- include ("partials/navbar") %>
            <div class="container">
                <hr>
                <h1>Questions:</h1>
                <hr>
                <a href="/questions" class="btn btn-primary">Return to questions</a>
                <br>
                <% receiveAnswer.forEach(quest=> { %>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3>
                                <%= quest.title %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/questions/<%= quest.id %>"><button class="btn btn-primary">Reply</button></a>
                        </div>
                    </div>
                    <% }) %>

            </div>
    </body>
    <%- include ("partials/footer.ejs") %>